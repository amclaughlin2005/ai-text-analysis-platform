{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "framework": "nextjs",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://ai-text-analysis-production.up.railway.app/api/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://ai-text-analysis-production.up.railway.app",
    "NEXT_PUBLIC_WS_URL": "wss://ai-text-analysis-production.up.railway.app",
    "NODE_ENV": "production"
  }
}
