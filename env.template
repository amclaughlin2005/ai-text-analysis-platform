# AI Text Analysis Platform - Environment Variables Template

#===========================================
# FRONTEND ENVIRONMENT VARIABLES
#===========================================

# API Configuration (Frontend)
NEXT_PUBLIC_API_URL=http://localhost:8003
NEXT_PUBLIC_WS_URL=ws://localhost:8003

# Feature Flags
NEXT_PUBLIC_ENABLE_DEBUG=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Authentication (Clerk)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your-clerk-publishable-key
CLERK_SECRET_KEY=sk_test_your-clerk-secret-key
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/login
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/login
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

# Authentication Feature Flags (Phased Rollout)
NEXT_PUBLIC_ENABLE_AUTH=true
NEXT_PUBLIC_ENFORCE_AUTH=false
NEXT_PUBLIC_AUTH_PHASE=1

#===========================================
# BACKEND ENVIRONMENT VARIABLES  
#===========================================

# Database Configuration
DATABASE_URL=sqlite:///./wordcloud_analysis.db
# Production: DATABASE_URL=postgresql://user:password@host:port/database

# Server Configuration
PORT=8003
HOST=0.0.0.0
ENVIRONMENT=development
DEBUG=true

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=uploads

# Application Settings
MAX_WORDS_PER_CLOUD=50
DEFAULT_ANALYSIS_MODE=all

# Security (Production Only)
SECRET_KEY=your-secret-key-for-production
JWT_SECRET=your-jwt-secret-for-production

# Text Analysis Settings
DEFAULT_NOISE_WORDS=details,page,https,filevineapp,docviewer,view,source,embedding

#===========================================
# PRODUCTION DEPLOYMENT SECRETS
#===========================================

# Vercel Deployment
VERCEL_TOKEN=your-vercel-token
VERCEL_ORG_ID=your-vercel-org-id  
VERCEL_PROJECT_ID=your-vercel-project-id

# Railway Deployment
RAILWAY_TOKEN=your-railway-token
RAILWAY_SERVICE_ID=your-railway-service-id

# Production API URLs (Update after deployment)
PRODUCTION_API_URL=https://your-railway-app.railway.app
PRODUCTION_WS_URL=wss://your-railway-app.railway.app
