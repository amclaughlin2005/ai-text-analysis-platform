{
  "version": 2,
  "name": "ai-text-analysis-platform",
  "buildCommand": "cd frontend && npm run build",
  "outputDirectory": "frontend/.next",
  "installCommand": "cd frontend && npm install",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://ai-text-analysis-platform-production.up.railway.app/api/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://ai-text-analysis-platform-production.up.railway.app",
    "NEXT_PUBLIC_WS_URL": "wss://ai-text-analysis-platform-production.up.railway.app",
    "NODE_ENV": "production"
  }
}
